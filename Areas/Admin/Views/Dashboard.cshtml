@model EventOrganizer_ASP.NET.Areas.Admin.ViewModels.DashboardViewModel
@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <title>Admin Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body style="background:#f4f6f9;">

    <div class="container mt-4">

        <h2 class="mb-4">Welcome, Admin</h2>

        <!-- Cards -->
        <div class="row mb-4">
            <div class="col-md-4">
                <div class="card p-3 shadow text-center">
                    <h6>Total Events</h6>
                    <h3>@Model.TotalEvents</h3>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card p-3 shadow text-center">
                    <h6>Total Registrations</h6>
                    <h3>@Model.TotalRegistrations</h3>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card p-3 shadow text-center">
                    <h6>Total Users</h6>
                    <h3>@Model.TotalUsers</h3>
                </div>
            </div>
        </div>

        <!-- Recent Table -->
        <div class="card p-3 shadow">
            <h5>Recent Event Registrations</h5>

            <table class="table mt-3">
                <thead>
                    <tr>
                        <th>User</th>
                        <th>Event</th>
                        <th>Date</th>
                        <th>Action</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model.RecentRegistrations)
                    {
                        <tr>
                            <td>@item.UserName</td>
                            <td>@item.EventName</td>
                            <td>@item.Date.ToString("MMM dd, yyyy")</td>
                            <td>
                                <button class="btn btn-warning btn-sm"
                                        onclick="showDetails('@item.UserName',
                                                         '@item.EventName',
                                                         '@item.Date.ToString("MMM dd, yyyy")')">
                                    View
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="detailsModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content p-4">
                <h5>User Name: <span id="modalUser"></span></h5>
                <h6>Event Name: <span id="modalEvent"></span></h6>
                <h6>Date: <span id="modalDate"></span></h6>
                <button class="btn btn-danger mt-3" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        function showDetails(user, eventName, date) {
            document.getElementById("modalUser").innerText = user;
            document.getElementById("modalEvent").innerText = eventName;
            document.getElementById("modalDate").innerText = date;

            var modal = new bootstrap.Modal(document.getElementById('detailsModal'));
            modal.show();
        }
    </script>

</body>
</html>