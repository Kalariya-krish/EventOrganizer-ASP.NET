@model EventOrganizer_ASP.NET.Areas.Admin.ViewModels.AddEventVM
@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h3 class="fw-bold mb-4">Add New Event</h3>

<div class="card border rounded-3 p-4 shadow-sm">
    <form method="post">
        <div class="row g-3">

            <div class="col-md-6">
                <label class="form-label fw-semibold">Event Name</label>
                <input name="Title" class="form-control bg-light border-0" required />
            </div>

            <div class="col-md-6">
                <label class="form-label fw-semibold">Category Tag</label>
                <select name="CategoryId" class="form-select bg-light border-0" required>
                    <option value="" disabled selected>-- Select Category --</option>
                    @foreach (var cat in Model.Categories)
                    {
                        <option value="@cat.CategoryId">@cat.CategoryName</option>
                    }
                </select>
            </div>

            <div class="col-md-6">
                <label class="form-label fw-semibold">Event Date</label>
                <input name="EventDate" type="date" class="form-control bg-light border-0" required />
            </div>

            <div class="col-md-6">
                <label class="form-label fw-semibold">Event Time</label>
                <input name="EventTime" type="time" class="form-control bg-light border-0" required />
            </div>

            <div class="col-md-6">
                <label class="form-label fw-semibold">Venue / Location</label>
                <input name="Location" class="form-control bg-light border-0" required />
            </div>

            <div class="col-md-12">
                <label class="form-label fw-semibold">Short Description (For card)</label>
                <textarea name="Description" class="form-control bg-light border-0" rows="4"></textarea>
            </div>

        </div>
        <div class="text-center mt-4">
            <button type="submit" class="btn px-4 py-2 text-white fw-semibold"
                    style="background-color: #e8450a; border-radius: 6px;">
                Add Event
            </button>
        </div>
    </form>
</div>