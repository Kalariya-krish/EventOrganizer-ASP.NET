@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"] - Eventalk Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            margin: 0;
        }

        .sidebar {
            width: 240px;
            height: 100vh;
            background: #0b032d;
            color: white;
            position: fixed;
            display: flex;
            flex-direction: column;
        }

        .sidebar-brand {
            padding: 20px;
            font-size: 1.1rem;
            font-weight: bold;
            color: white;
            border-bottom: 1px solid #1a0a4f;
        }

        .sidebar a {
            color: #ccc;
            text-decoration: none;
            display: flex;
            align-items: center;
            gap: 10px;
            padding: 12px 20px;
            font-size: 0.95rem;
            transition: background 0.2s;
        }

            .sidebar a:hover {
                background: #1a0a4f;
                color: white;
            }

            .sidebar a.active {
                background: #1a0a4f;
                color: white;
                font-weight: 600;
            }

        .sidebar-logout {
            margin-top: auto;
            border-top: 1px solid #1a0a4f;
        }

        .content {
            margin-left: 240px;
            padding: 30px;
            background: #f4f6f9;
            min-height: 100vh;
        }
    </style>
</head>
<body>

    <div class="sidebar">
        <div class="sidebar-brand">Eventalk. Admin</div>

        @{
            var path = HttpContextAccessor.HttpContext?.Request.Path.Value?.ToLower() ?? "";
        }

        <a href="/Admin/Dashboard/Index" class="@(path.Contains("/admin/dashboard") ? "active" : "")">
            <i class="bi bi-grid"></i> Dashboard
        </a>
        <a href="/Admin/Event/Index" class="@(path.Contains("/admin/event/index") || path == "/admin/event" ? "active" : "")">
            <i class="bi bi-calendar-event"></i> Manage Events
        </a>
        <a href="/Admin/Event/Add" class="@(path.Contains("/admin/event/add") ? "active" : "")">
            <i class="bi bi-plus-square"></i> Add New Event
        </a>
        <a href="/Admin/User/Index" class="@(path.Contains("/admin/user") ? "active" : "")">
            <i class="bi bi-people"></i> User List
        </a>
        <a href="/Admin/Registration/Index" class="@(path.Contains("/admin/registration") ? "active" : "")">
            <i class="bi bi-clipboard-check"></i> Registration
        </a>
        <a href="/Admin/Contact/Index" class="@(path.Contains("/admin/contact") ? "active" : "")">
            <i class="bi bi-envelope"></i> Contact Messages
        </a>
        <a href="/Admin/Review/Index" class="@(path.Contains("/admin/review") ? "active" : "")">
            <i class="bi bi-star"></i> Rating and Review
        </a>

        <div class="sidebar-logout">
            <a href="/Account/Logout">
                <i class="bi bi-box-arrow-right"></i> Logout
            </a>
        </div>
    </div>

    <div class="content">
        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    @RenderSection("Scripts", required: false)

</body>
</html>