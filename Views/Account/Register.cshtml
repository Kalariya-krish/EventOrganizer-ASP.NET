@model EventOrganizer_ASP.NET.Models.User
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Register - Eventtalk</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body style="background-color:#f4f6f9;">

    <div class="container-fluid vh-100">
        <div class="row h-100">

            <!-- LEFT SIDE FORM -->
            <div class="col-md-6 d-flex justify-content-center align-items-center bg-white">
                <div class="col-md-8">

                    <h3>Create an account</h3>
                    <p class="text-muted">Start your journey with Eventtalk today.</p>

                    <form asp-action="Register" asp-controller="Account" method="post">

                        <div class="mb-3">
                            <label>Full Name</label>
                            <input asp-for="FullName" class="form-control" required />
                        </div>

                        <div class="mb-3">
                            <label>Email</label>
                            <input asp-for="Email" class="form-control" required />
                        </div>

                        <div class="mb-3">
                            <label>Password</label>
                            <input asp-for="Password" type="password" class="form-control" required />
                        </div>

                        <div class="mb-3">
                            <label>Phone</label>
                            <input asp-for="Phone" class="form-control" />
                        </div>

                        <button type="submit" class="btn w-100 text-white"
                                style="background-color:#ff6b00;">
                            Create Account
                        </button>

                    </form>

                </div>
            </div>

            <!-- RIGHT SIDE INFO PANEL -->
            <div class="col-md-6 d-flex justify-content-center align-items-center"
                 style="background-color:#f8f9fa;">

                <div class="text-center px-5">
                    <h3>Discover the best events happening around you.</h3>
                    <p class="text-muted mt-3">
                        Join thousands of people discovering workshops,
                        tech summits, and live music locally and globally.
                    </p>
                </div>

            </div>

        </div>
    </div>

</body>
</html>