@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"] - Eventalk</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet">
    <style>
        body {
            margin: 0;
            font-family: 'Segoe UI', sans-serif;
        }

        .navbar-brand span {
            color: #e8450a;
        }

        .nav-link {
            color: #333 !important;
            font-weight: 500;
        }

            .nav-link:hover {
                color: #e8450a !important;
            }

            .nav-link.active-link {
                color: #e8450a !important;
                font-weight: 600;
            }

        .btn-logout {
            background-color: #e8450a;
            color: white;
            border-radius: 6px;
            padding: 8px 20px;
            font-weight: 600;
            border: none;
        }

            .btn-logout:hover {
                background-color: #c93a08;
                color: white;
            }

        footer {
            background: #0b032d;
            color: #ccc;
            padding: 40px 0 20px;
        }

            footer a {
                color: #ccc;
                text-decoration: none;
                display: block;
                margin-bottom: 6px;
            }

                footer a:hover {
                    color: #e8450a;
                }

            footer .brand {
                color: white;
                font-weight: 700;
                font-size: 1.2rem;
            }

                footer .brand span {
                    color: #e8450a;
                }
    </style>
</head>
<body>

    @{
        var fullName = HttpContextAccessor.HttpContext?.Session.GetString("FullName") ?? "User";
        var path = HttpContextAccessor.HttpContext?.Request.Path.Value?.ToLower() ?? "";
    }

    <nav class="navbar navbar-expand-lg bg-white border-bottom px-4 py-3 sticky-top shadow-sm">
        <a class="navbar-brand fw-bold fs-4" href="/Home/Index">Event<span>talk.</span></a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#userNav">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="userNav">
            <ul class="navbar-nav mx-auto gap-3">
                <li class="nav-item">
                    <a class="nav-link @(path.Contains("/home/index") || path == "/" ? "active-link" : "")"
                       href="/Home/Index">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(path.Contains("/event") ? "active-link" : "")"
                       href="/User/Events">Events</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(path.Contains("/user/myevents") ? "active-link" : "")"
                       href="/User/MyEvents">My Events</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(path.Contains("/user/profile") ? "active-link" : "")"
                       href="/User/Profile">Profile</a>
                </li>
            </ul>
            <div class="d-flex gap-2 align-items-center">
                <span class="fw-semibold text-muted me-2">
                    <i class="bi bi-person-circle me-1"></i>@fullName
                </span>
                <a href="/Account/Logout" class="btn btn-logout">Logout</a>
            </div>
        </div>
    </nav>

    @RenderBody()

    <footer>
        <div class="container">
            <div class="row">
                <div class="col-md-6 mb-4">
                    <div class="brand mb-2">Event<span>talk.</span></div>
                    <p style="font-size:0.9rem;">A web-based platform for organizing and managing events efficiently.</p>
                </div>
                <div class="col-md-3 mb-4">
                    <h6 class="text-white fw-bold mb-3">Quick Links</h6>
                    <a href="/Home/Index">Home</a>
                    <a href="/User/Events">Events</a>
                    <a href="/User/MyEvents">My Events</a>
                    <a href="/User/Profile">Profile</a>
                </div>
            </div>
            <hr style="border-color:#1a0a4f;">
            <p class="text-center mb-0" style="font-size:0.85rem;">
                &copy; @DateTime.Now.Year Eventalk. All rights reserved.
            </p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>