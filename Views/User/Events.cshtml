@model List<EventOrganizer_ASP.NET.ViewModels.EventCardVM>
@{
    Layout = "~/Views/Shared/_UserLayout.cshtml";
    ViewData["Title"] = "Events";
    var selected = ViewBag.SelectedCategory as string ?? "All";
}

<section class="py-5">
    <div class="container">
        <div class="text-center mb-4">
            <h2 class="fw-bold">Explore <span style="color:#e8450a;">Events</span></h2>
        </div>

        <!-- Category Filter -->
        <div class="d-flex justify-content-center flex-wrap gap-2 mb-4">
            @foreach (var cat in ViewBag.Categories as List<string>)
            {
                <a href="/User/Events?category=@cat"
                   class="btn btn-sm rounded-pill px-3"
                   style="@(cat == selected
                                          ? "background:#e8450a; color:white; border:none;"
                                          : "background:white; color:#333; border:1px solid #ddd;")">
                @cat
            </a>
                        }
        </div>

        <!-- Event Cards -->
        <div class="row g-4">
            @if (Model.Count == 0)
            {
                <div class="text-center text-muted py-5">No events found.</div>
            }
            else
            {
                @foreach (var ev in Model)
                {
                    <div class="col-md-4">
                        <div class="card border rounded-3 h-100 shadow-sm" style="overflow:hidden;">
                            <div style="height:160px; background:#e9ecef;
                                                display:flex; align-items:center; justify-content:center;">
                                <i class="bi bi-calendar-event" style="font-size:2.5rem; color:#aaa;"></i>
                            </div>
                            <div class="card-body d-flex flex-column p-3">
                                <div class="d-flex justify-content-between align-items-start mb-1">
                                    <h6 class="fw-bold mb-0" style="font-size:0.95rem;">@ev.Title</h6>
                                    <span class="badge rounded-pill px-2 py-1 ms-2"
                                          style="background:#fff3ee; color:#e8450a; font-size:0.7rem;">
                                        @ev.CategoryName
                                    </span>
                                </div>
                                <p class="text-muted small mb-2"
                                   style="display:-webkit-box; -webkit-line-clamp:2;
                                                  -webkit-box-orient:vertical; overflow:hidden;">
                                    @ev.Description
                                </p>
                                <div class="text-muted small mb-1">
                                    <i class="bi bi-calendar3 me-1"></i>
                                    @ev.EventDate.ToString("MMM dd") &bull;
                                    @DateTime.Today.Add(ev.EventTime).ToString("h:mm tt")
                                </div>
                                <div class="text-muted small mb-3">
                                    <i class="bi bi-geo-alt me-1"></i> @ev.Location
                                </div>
                                <div class="d-flex justify-content-between align-items-center mt-auto">
                                    <small style="color:#e8450a; font-weight:500;">
                                        @(ev.RegisteredCount > 0 ? "Limited Seats" : "Seats Available")
                                    </small>
                                    <a href="/User/EventDetail/@ev.EventId"
                                       class="btn btn-sm text-white fw-semibold"
                                       style="background:#e8450a; border-radius:6px; font-size:0.8rem;">
                                        Register
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</section>