@{
    Layout = "~/Views/Shared/_GuestLayout.cshtml";
    ViewData["Title"] = "About";
}

<!-- Hero -->
<section class="text-center py-5 border-bottom">
    <div class="container">
        <h2 class="fw-bold">About <span style="color:#e8450a;">Eventalk.</span></h2>
        <p class="text-muted mt-2" style="max-width:600px; margin:auto;">
            Eventalk is a web-based platform designed to simplify the process of organizing,
            managing, and participating in events.
        </p>
    </div>
</section>

<!-- Mission -->
<section class="py-5">
    <div class="container">
        <div class="row align-items-center g-4">
            <div class="col-md-6">
                <h4 class="fw-bold mb-3">Our Mission</h4>
                <p class="text-muted" style="line-height:1.9;">
                    Eventalk aims to provide a centralized platform for event organization,
                    enabling administrators to manage events efficiently and users to easily
                    explore and register for events.
                </p>
            </div>
            <div class="col-md-6 text-center">
                <img src="https://cdnjs.cloudflare.com/ajax/libs/twemoji/14.0.2/svg/1f4bb.svg"
                     style="width:180px; opacity:0.85;" alt="mission" />
            </div>
        </div>
    </div>
</section>

<!-- Key Features -->
<section class="py-5" style="background:#f4f4f4;">
    <div class="container">
        <h4 class="fw-bold text-center mb-4">Key Features of Eventalk</h4>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card border-0 rounded-3 p-4 h-100 shadow-sm"
                     style="background:#0b032d; color:white;">
                    <h6 class="fw-bold mb-2">Easy Registration</h6>
                    <p class="small" style="color:#ccc;">
                        Users can register for events easily using a simple form.
                    </p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border-0 rounded-3 p-4 h-100 shadow-sm"
                     style="background:#e8450a; color:white;">
                    <h6 class="fw-bold mb-2">Admin Management</h6>
                    <p class="small" style="color:#ffe0d6;">
                        Admins can add, update, and manage events.
                    </p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border-0 rounded-3 p-4 h-100 shadow-sm border">
                    <h6 class="fw-bold mb-2">Secure Data</h6>
                    <p class="text-muted small">
                        User and event data is stored securely in the database.
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>