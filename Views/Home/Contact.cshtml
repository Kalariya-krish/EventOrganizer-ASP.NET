@{
    Layout = "~/Views/Shared/_GuestLayout.cshtml";
    ViewData["Title"] = "Contact";
}

<section class="py-5">
    <div class="container d-flex justify-content-center">
        <div class="card border rounded-3 shadow-sm p-4 p-md-5" style="max-width:600px; width:100%;">

            <h4 class="fw-bold text-center mb-4">Contact us !!</h4>

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success text-center">@TempData["Success"]</div>
            }

            <form method="post" action="/Home/Contact">
                <div class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label fw-semibold small">Full Name</label>
                        <input name="fullName" class="form-control bg-light border-0" required />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label fw-semibold small">Email</label>
                        <input name="email" type="email" class="form-control bg-light border-0" required />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label fw-semibold small">Subject</label>
                        <input name="subject" class="form-control bg-light border-0" />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label fw-semibold small">Message</label>
                        <textarea name="message" class="form-control bg-light border-0" rows="3"></textarea>
                    </div>
                </div>
                <div class="text-center mt-4">
                    <button type="submit" class="btn text-white fw-semibold px-5"
                            style="background:#e8450a; border-radius:6px;">
                        Submit
                    </button>
                </div>
            </form>

        </div>
    </div>
</section>